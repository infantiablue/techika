@tailwind base;
@layer base {
  html,body{
    background-color: #fff;
  }
  h1 {
    @apply text-3xl;
  }
  h2 {
    @apply text-2xl;
  }
  h3 {
    @apply text-xl;
  }
  a {
    color: #2a9d8f;
  }
  a:hover{
    color: #f4a261;
  }
  li{
    @apply list-inside;
  }
}

@tailwind components;
@tailwind utilities;

.theme-container{
  header{
    @apply mb-2;
    .logo{
      @apply p-0 rounded-full;
    }
  }
  .navbar {
    @apply bg-gray-300 bg-opacity-70;
  }
  .navbar .links{
    @apply bg-gray-300 bg-opacity-0;
  }
  .site-name{
    @apply hidden;
  }
}
.theme-container.homepage {
  #main-title {
    @apply leading-tight p-1;
  }
  .hero {
    img {
      @apply object-cover w-full m-0 h-52;
    }
  }
  .home {
    @apply max-w-max p-0; 
    @css {
    .features {
      @apply w-full mx-auto p-1 md:w-10/12;
    }
  }   
  }

}