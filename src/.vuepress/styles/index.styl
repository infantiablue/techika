@tailwind base;
@layer base {
  h1 {
    @apply text-3xl;
  }
  h2 {
    @apply text-2xl;
  }
  h3 {
    @apply text-xl;
  }
  a {
    @apply text-blue-400;
  }
  li{
    @apply list-inside;
  }

}

@tailwind components;
@tailwind utilities;
.theme-container{
  header{
    @apply mb-2;
  }
  .logo{
    @apply w-12 h-auto rounded-full;
  }
  .site-name{
    display: none
  }
}
.theme-container.homepage {
  .hero {
    img {
      object-fit: cover;
      width: 100%;
      margin: 0;
      height: 300px;
    }
  }
  .home {
    max-width: 100%;
    padding: 0;
  }
  .features {
    width: 75%;
    margin: auto;
    padding: 0.5rem 1rem;
  }
}