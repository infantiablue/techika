@tailwind base;
@layer base {
  html,body{
    @apply bg-gray-50 h-full max-h-full antialiased;  
  }
  h1{
    @apply text-3xl py-2 font-semibold;
  }
  h2{
    @apply text-2xl py-2 font-semibold;
  }
  h3 {
    @apply text-xl py-2 font-semibold;
  } 
  p{
    @apply py-2 leading-8;
  }
  @css{
    a {
      @apply text-secondary hover:text-highlight;
    }    
  }
  li{
    @apply list-inside list-disc;
  }
  code{
    @apply text-gray-400 font-mono px-1;
  }
}
@tailwind components;
@tailwind utilities;

.theme-container{
  .navbar {
    @apply bg-gray-300 bg-opacity-0;
    border: none;
  }
  .sidebar-button{
    @apply bg-gray-200 pr-7 pb-7 rounded-md;
  }
  .navbar .links{
    @apply bg-gray-300 bg-opacity-0 pr-12;
  }
  .logo{
    @apply p-0 rounded-full;
  }  
  .site-name{
    @apply hidden;
  }
  #content{
    @apply text-primary;
    blockquote{
      @apply my-4 py-4 px-2 text-gray-800 font-serif text-xl text-center;
    }
  }
}

.sidebar-open{
  .darkmode{
  @apply mt-2 ml-6 pt-2 pb-2 text-center text-lg h-6 w-6 pl-1 flex items-center justify-center cursor-pointer rounded-full;  
  }
}

.theme-container.homepage {
  #main-title {
    @apply leading-tight pt-10 pb-0 my-0 border-0 text-4xl font-serif;
  }
  .hero {
    @apply pt-14;
    img {
      @apply object-cover w-full m-0;
    }
  }
  .home {
    @apply max-w-max p-0; 
    @css {
      .features {
        @apply w-full mx-auto py-6 mt-6 md:w-11/12 border-t-0 !important;
      }
    }  
    .feature{
      @apply px-2 flex-1 leading-6 font-medium;
    } 
    .footer{
      @apply border-t-0 !important;  
    }    
  }

}