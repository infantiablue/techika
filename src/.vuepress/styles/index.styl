@tailwind base;
@layer base {
  html,body{
    @apply bg-white;
  }
  h1 {
    @apply text-3xl;
  }
  h2 {
    @apply text-2xl;
  }
  h3 {
    @apply text-xl;
  }
  a {
    color: #2a9d8f;
  }
  a:hover{
    color: #f4a261;
  }
  li{
    @apply list-inside;
  }
}
@tailwind components;
@tailwind utilities;

.theme-container{
  .navbar {
    @apply bg-gray-300 bg-opacity-0 ;
    border: none;
  }
  .navbar .links{
    @apply bg-gray-300 bg-opacity-0;
  }
  .logo{
    @apply p-0 rounded-full;
  }  
  .site-name{
    @apply hidden;
  }
}
.theme-container.homepage {
  .navbar, .router-link-active {
    @apply text-white;  
  }
  #main-title {
    @apply leading-tight p-1;
  }
  .hero {
    img {
      @apply object-cover w-full m-0;
    }
  }
  .home {
    @apply max-w-max p-0; 
    @css {
    .features {
      @apply w-full mx-auto p-1 md:w-11/12;
    }
    }   
  }
  .feature{
    @apply px-2 flex-1 ;
  }
}